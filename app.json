{
  "expo": {
    "name": "fp-plus",
    "slug": "fp-plus",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "fpplus",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0ea5e9"
    },
    "ios": {
      "bundleIdentifier": "com.fitnesspassport.fpplus",
      "supportsTablet": true,
      "infoPlist": {
        "NFCReaderUsageDescription": "We need access to NFC to scan member passes for check-in",
        "com.apple.developer.nfc.readersession.formats": ["NDEF", "TAG"]
      }
    },
    "android": {
      "package": "com.fitnesspassport.fpplus",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.NFC"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#0ea5e9"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}